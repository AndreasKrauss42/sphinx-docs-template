root=true

[*]
end_of_line = lf
indent_style = tab
insert_final_newline = true
charset = utf-8

[*.{yml, yaml}]
indent_style = space
indent_size = 2

[*.rst]
indent_style = space
indent_size = 3
trim_trailing_whitespace = false

[*.{puml, mmd}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = false
